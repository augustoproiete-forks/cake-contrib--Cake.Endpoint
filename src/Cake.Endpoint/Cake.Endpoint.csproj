<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;net45</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Title>Cake.Endpoint</Title>
    <Description>Json based endpoint orchestration addin for cake build.</Description>
    <Copyright>Copyright (c) engelbert strauss GmbH &amp; Co. KG</Copyright>
    <Authors>engelbert strauss GmbH &amp; Co. KG</Authors>
    <PackageId>Cake.Endpoint</PackageId>
    <PackageTags>Cake;Script;Build;Endpoint;Addin</PackageTags>
    <PackageIconUrl>https://cdn.rawgit.com/cake-contrib/graphics/a5cf0f881c390650144b2243ae551d5b9f836196/png/cake-contrib-medium.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/cake-contrib/cake.endpoint/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/cake-contrib/cake.endpoint</PackageProjectUrl>
    <RepositoryUrl>https://github.com/cake-contrib/cake.endpoint</RepositoryUrl>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OS)|$(TargetFramework)'=='Unix|net46'">
    <FrameworkPathOverride>/usr/local/lib/mono/4.6-api/</FrameworkPathOverride>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Common" Version="0.16.2" />
    <PackageReference Include="Cake.Core" Version="0.16.2" />
  </ItemGroup>

</Project>
